{
  "name": "MockieTalkie",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Mocking AJAX made easy.",
  "icons": {
    "38": "images/icon-38.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/libs/underscore-min.js",
      "scripts/libs/MockStorage.js",
      "scripts/libs/ActivityLog.js",
      "scripts/libs/TabRepository.js",
      "scripts/libs/Tab.js",
      "scripts/background.js"
    ]
  },
  "permissions": ["<all_urls>", "storage", "unlimitedStorage"],
  "web_accessible_resources": [
    "scripts/libs/MockHttpRequest.js",
    "scripts/libs/CustomEventServer.js",
    "scripts/injected.js"
  ],
  "browser_action": {
    "default_icon": {
      "38": "images/icon-38.png"
    },
    "default_title": "MockieTalkie",
    "default_popup": "popup/index.html"
  },
  "options_page": "options_page/dist/index.html"
}
